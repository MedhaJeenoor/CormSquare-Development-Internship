@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow p-4">
                <h2 class="text-center mb-3">Create a new account</h2>
                <hr />
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.FirstName" class="form-control" placeholder="John" />
                                <label asp-for="Input.FirstName">First Name</label>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.LastName" class="form-control" placeholder="Doe" />
                                <label asp-for="Input.LastName">Last Name</label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="123-456-7890" />
                        <label asp-for="Input.PhoneNumber">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="isEmployeeCheckbox" />
                        <label class="form-check-label" for="isEmployeeCheckbox">I am an employee of a company</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.CompanyName" class="form-control" id="companyNameField" placeholder="Company Name" disabled />
                        <label asp-for="Input.CompanyName">Company Name</label>
                        <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3" id="employeeIdField" style="display: none;">
                        <input asp-for="Input.EmployeeID" class="form-control" id="employeeIdInput" placeholder="Employee ID" disabled />
                        <label asp-for="Input.EmployeeID">Employee ID</label>
                        <span asp-validation-for="Input.EmployeeID" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="Input.Country" class="form-control">
                            <option value="">Select Country</option>
                            <option value="USA">United States</option>
                            <option value="Canada">Canada</option>
                            <option value="UK">United Kingdom</option>
                            <option value="Germany">Germany</option>
                            <option value="France">France</option>
                            <option value="India">India</option>
                            <option value="China">China</option>
                            <option value="Japan">Japan</option>
                            <option value="Brazil">Brazil</option>
                            <option value="Australia">Australia</option>
                        </select>
                        <label asp-for="Input.Country">Country</label>
                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="mb-5 pb-5"></div>
<!-- Spacer to push content above footer -->
<div style="min-height: 100px;"></div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var isEmployeeCheckbox = document.getElementById("isEmployeeCheckbox");
            var companyNameField = document.getElementById("companyNameField");
            var employeeIdField = document.getElementById("employeeIdField");
            var employeeIdInput = document.getElementById("employeeIdInput");

            isEmployeeCheckbox.addEventListener("change", function () {
                if (this.checked) {
                    companyNameField.disabled = false;
                    employeeIdField.style.display = "block";
                    employeeIdInput.disabled = false;
                } else {
                    companyNameField.disabled = true;
                    companyNameField.value = "";
                    employeeIdField.style.display = "none";
                    employeeIdInput.disabled = true;
                    employeeIdInput.value = "";
                }
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
