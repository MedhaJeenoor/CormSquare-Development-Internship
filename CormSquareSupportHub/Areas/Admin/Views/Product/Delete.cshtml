@model ProductViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="text-danger">Delete Product</h2>
<hr />

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Code:</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">SubCategories:</dt>
        <dd class="col-sm-10">
            @foreach (var subCategory in Model.SubCategoryNames)
            {
                <span class="badge bg-secondary">@subCategory</span>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>