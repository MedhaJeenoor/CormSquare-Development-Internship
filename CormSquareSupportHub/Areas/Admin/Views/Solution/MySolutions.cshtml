@model IEnumerable<SupportHub.Models.Solution>

@{
    ViewData["Title"] = "My Solutions";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <h2 class="text-center py-2">My Solutions</h2>
    </div>
    <div class="card-body p-4">
        @if (Model.Any())
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Product</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var solution in Model)
                    {
                        <tr>
                            <td>@solution.Title</td>
                            <td>@solution.Product?.ProductName</td>
                            <td>@solution.Category?.Name</td>
                            <td>@solution.Status</td>
                            <td>
                                <a asp-action="Upsert" asp-route-solutionId="@solution.Id" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@solution.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this solution?');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No solutions found.</p>
        }
    </div>
</div>
<div class="mb-5 pb-5"></div>