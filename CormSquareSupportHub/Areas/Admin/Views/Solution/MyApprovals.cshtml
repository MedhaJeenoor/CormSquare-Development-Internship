@model IEnumerable<SupportHub.Models.Solution>

@{
    ViewData["Title"] = "My Approved Solutions";
}

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Inter', sans-serif;
    }

    .approvals-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #6c757d, #495057);
        color: white;
        padding: 1.5rem;
        border-bottom: none;
    }

        .card-header h2 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 600;
        }

    .card-body {
        padding: 2rem;
        background-color: #fff;
    }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table th, .table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            color: #343a40;
        }

        .table tr:last-child td {
            border-bottom: none;
        }

        .table a {
            color: #007bff;
            text-decoration: none;
        }

            .table a:hover {
                text-decoration: underline;
            }

    .badge {
        font-size: 0.75rem;
        padding: 0.4rem 0.8rem;
        border-radius: 12px;
    }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    @@media (max-width: 768px) {
        .card-body {
            padding: 1.5rem;
        }

        .table th, .table td {
            font-size: 0.9rem;
            padding: 0.75rem;
        }

        .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }
    }
</style>

<div class="approvals-container">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">My Approved Solutions</h2>
        </div>
        <div class="card-body">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">@TempData["error"]</div>
            }
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">@TempData["success"]</div>
            }

            @if (Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Product</th>
                            <th>Category</th>
                            <th>Subcategory</th>
                            <th>Author</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var solution in Model)
                        {
                            <tr>
                                <td>@solution.Title</td>
                                <td>@solution.Product?.ProductName</td>
                                <td>@solution.Category?.Name</td>
                                <td>@solution.SubCategory?.Name</td>
                                <td>@solution.Author?.UserName</td>
                                <td>
                                    <span class="badge bg-success">@solution.Status</span>
                                </td>
                                <td>
                                    <a asp-action="Review" asp-route-id="@solution.Id" class="btn btn-sm btn-primary">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted text-center">No approved solutions found.</p>
            }
        </div>
    </div>
</div>
<div class="mb-5 pb-5"></div>
<!-- Spacer to push content above footer -->
<div style="min-height: 100px;"></div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            console.log('MyApprovals page loaded');
        });
    </script>
}