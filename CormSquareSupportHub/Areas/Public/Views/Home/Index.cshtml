@model IEnumerable<SupportHub.Models.Solution>

@{
    ViewData["Title"] = "Home Page - Approved Solutions";
}

<h2 class="mb-4">Solutions</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No approved solutions are available right now.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Product</th>
                <th>Subcategory</th>
                <th>Author</th>
                <th>Solutions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var solution in Model)
            {
                <tr>
                    <td>@solution.Title</td>
                    <td>@solution.Category.Name</td>
                    <td>@solution.Product.ProductName</td>
                    <td>
                        @if (solution.SubCategory != null)
                        {
                            @solution.SubCategory.Name
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>@solution.Author.FirstName </td>
                    <td>
                        <a asp-area="Public" asp-controller="Home" asp-action="Details" asp-route-id="@solution.Id" class="btn btn-primary btn-sm">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
