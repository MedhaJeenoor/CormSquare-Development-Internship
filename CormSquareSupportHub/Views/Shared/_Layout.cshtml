<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CormSquareSupportHub</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CormSquareSupportHub.styles.css" asp-append-version="true" />

    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Toastr Notifications -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <style>
        /* Navbar adjustments */
        .navbar {
            background: #000000;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
            padding: 0.8rem 0;
            position: relative; /* Establish a new stacking context */
            z-index: 2000; /* Ensure navbar stays above content */
        }

        .navbar-brand img {
            height: 40px;
            margin-right: 0.5rem;
        }

        .nav-link {
            color: #d1d5db !important;
            font-weight: 500;
            font-size: 1rem;
            padding: 0.5rem 1rem;
            transition: color 0.3s ease, background-color 0.3s ease;
        }

            .nav-link:hover,
            .nav-link:focus {
                color: #ffffff !important;
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 4px;
            }

        /* Center navbar menu items */
        .navbar-nav {
            flex-grow: 0;
        }

        .navbar-collapse {
            display: flex;
            align-items: center;
            width: 100%;
        }

        .navbar-center {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            justify-content: center;
        }

        /* Align login partial to exact right corner */
        .login-partial {
            margin-left: auto;
            padding: 0;
        }

            .login-partial .navbar-nav {
                flex-direction: row;
                margin: 0;
            }

            .login-partial .nav-link {
                padding: 0.5rem 0.75rem;
                color: #d1d5db !important;
            }

                .login-partial .nav-link:hover,
                .login-partial .nav-link:focus {
                    color: #ffffff !important;
                    background-color: rgba(255, 255, 255, 0.1);
                }

        /* Dropdown styling */
        .nav-item.dropdown {
            position: relative;
        }

        .dropdown-menu {
            background: #000000;
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 6px;
            margin-top: 0;
            text-align: center;
            z-index: 2050; /* Increased from 1050 to ensure it stays above all content */
            min-width: 200px;
            display: none; /* Bootstrap toggles this to block */
        }

            .dropdown-menu.show {
                display: block;
            }

        .dropdown-item {
            color: #d1d5db;
            font-weight: 400;
            padding: 0.5rem 1.5rem;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .dropdown-item:hover,
            .dropdown-item:focus {
                background-color: rgba(255, 255, 255, 0.15);
                color: #ffffff;
            }

        .dropdown-toggle::after {
            border-top-color: #d1d5db;
            vertical-align: middle;
        }

        .dropdown-toggle:hover::after,
        .dropdown-toggle:focus::after {
            border-top-color: #ffffff;
        }

        /* Toggler */
        .navbar-toggler {
            border: none;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 0.9)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.2);
            outline: none;
        }

        /* Collapsed menu */
        .navbar-collapse.show,
        .navbar-collapse.collapsing {
            background: #000000;
            border-radius: 6px;
            padding: 1rem;
            margin-top: 0.5rem;
            text-align: center;
        }

        @@media (max-width: 576px) {
            .navbar-center {
                position: static;
                transform: none;
                width: 100%;
            }

            .login-partial {
                margin-left: 0;
                width: 100%;
                text-align: center;
            }

                .login-partial .navbar-nav {
                    flex-direction: column;
                }

            .dropdown-menu {
                position: static;
                width: 100%;
                box-shadow: none;
            }
        }

        /* Footer */
        .contact-details a {
            text-decoration: none;
        }

        .footer {
            padding-bottom: 2rem !important;
        }

            /* Center align footer content */
            .footer .address,
            .footer .contact-details {
                text-align: center;
            }
    </style>
</head>

