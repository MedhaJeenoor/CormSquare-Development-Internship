                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Solution" asp-action="MySolutions"><i class="fas fa-lightbulb"></i> My Solutions</a>
                                </li>
                            }
                            @if (User.IsInRole("KM Champion"))
                            {
                                <li class="nav-item">
