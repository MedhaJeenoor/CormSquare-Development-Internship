@model List<Category>
@{
    ViewData["Title"] = "Category List";
}

<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Category Management</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Category
                </a>
            </div>
        </div>
        <div class="mb-5 pb-5">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th>Optimal Creation Time (Days)</th>
                    <th>Display Order</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
                {
                    <tr class="table-primary">
                        <td><strong>@category.Name</strong></td>
                        <td>@category.Description</td>
                        <td>@category.OptimalCreationTime</td>
                        <td>@category.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>

                    @if (category.SubCategories != null && category.SubCategories.Any())
                    {
                        @foreach (var subCategory in category.SubCategories.OrderBy(sc => sc.DisplayOrder))
                        {
                            <tr>
                                <td style="padding-left: 40px;">↳ @subCategory.Name</td>
                                <td>@subCategory.Description</td>
                                <td>@subCategory.OptimalCreationTime</td>
                                <td>@subCategory.DisplayOrder</td>
                                <td>
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@subCategory.Id" class="btn btn-warning mx-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@subCategory.Id" class="btn btn-danger mx-2">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
<div class="mb-5 pb-5"></div> <!-- This will push the footer down -->